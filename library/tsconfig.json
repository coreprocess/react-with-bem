{
    "compilerOptions": {
        /* Language and Environment */
        "target": "ES2020",
        "lib": ["ES2020", "DOM"],
        "jsx": "react",

        /* Modules */
        "module": "commonjs",
        "rootDir": "src",

        /* Emit */
        "outDir": "dist",
        "declaration": true,

        /* Interop Constraints */
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Type Checking */
        "strict": true,

        /* Completeness */
        "skipLibCheck": true,
        "noErrorTruncation": true
    }
}
